<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zues.dao.UserDao">
    <!--新增-->
    <insert id="insertUser">
        INSERT INTO `user` (`name`, `age`) VALUES ('zues', 18);
    </insert>


    <!--删除-->
    <delete id="deleteUser">
        delete from user where id = #{id}
    </delete>

    <!--详情-->
    <select id="getUserById" resultType="com.zues.entity.UserEntity">
        select * from user where id = #{id}
    </select>

    <!--查询列表-->
    <select id="getUserList" resultType="com.zues.entity.UserEntity">
        select * from user
    </select>

    <!--更新-->
    <update id="updateUser">
        update user set name=#{name},age=#{age} where id = #{id}
    </update>

    <select id="getUserToMap" resultType="map">
        select * from user where id = #{id}
    </select>

    <select id="getUserListToMap" resultType="map">
        select * from user
    </select>

    <select id="getAllUserToMap" resultType="map">
        select * from user
    </select>

</mapper>